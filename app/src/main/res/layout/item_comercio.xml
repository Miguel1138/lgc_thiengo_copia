<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_principal"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="Imagem Comércio"
        android:scaleType="centerCrop"
        android:src="@drawable/img_perfil_padrao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nome_fantasia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="#333"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/iv_principal"
        app:layout_constraintStart_toEndOf="@id/iv_principal"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_localizacao"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="Localização ícone"
        android:src="@drawable/ic_localizacao"
        app:layout_constraintLeft_toRightOf="@id/iv_principal"
        app:layout_constraintStart_toEndOf="@id/iv_principal"
        app:layout_constraintTop_toBottomOf="@id/tv_nome_fantasia" />

    <TextView
        android:id="@+id/tv_localizacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAlignment="textStart"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_localizacao"
        app:layout_constraintStart_toEndOf="@id/iv_localizacao"
        app:layout_constraintTop_toBottomOf="@id/tv_nome_fantasia" />

    <ImageView
        android:id="@+id/iv_estrela_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_localizacao"
        app:layout_constraintStart_toStartOf="@id/tv_localizacao"
        app:layout_constraintTop_toBottomOf="@id/tv_localizacao" />

    <ImageView
        android:id="@+id/iv_estrela_2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintLeft_toRightOf="@id/iv_estrela_1"
        app:layout_constraintStart_toEndOf="@id/iv_estrela_1"
        app:layout_constraintTop_toTopOf="@id/iv_estrela_1" />

    <ImageView
        android:id="@+id/iv_estrela_3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintLeft_toRightOf="@id/iv_estrela_2"
        app:layout_constraintStart_toEndOf="@id/iv_estrela_2"
        app:layout_constraintTop_toTopOf="@id/iv_estrela_1" />

    <ImageView
        android:id="@+id/iv_estrela_4"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintLeft_toRightOf="@id/iv_estrela_3"
        app:layout_constraintStart_toEndOf="@id/iv_estrela_3"
        app:layout_constraintTop_toTopOf="@id/iv_estrela_1" />

    <ImageView
        android:id="@+id/iv_estrela_5"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintLeft_toRightOf="@id/iv_estrela_4"
        app:layout_constraintStart_toEndOf="@id/iv_estrela_4"
        app:layout_constraintTop_toTopOf="@id/iv_estrela_1" />

    <TextView
        android:id="@+id/tv_avaliacao_pontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:paddingTop="4dp"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/iv_estrela_5"
        app:layout_constraintStart_toEndOf="@id/iv_estrela_5"
        app:layout_constraintTop_toBottomOf="@id/tv_localizacao" />

    <TextView
        android:id="@+id/tv_avaliacao_qtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:paddingTop="3dp"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/tv_avaliacao_pontos"
        app:layout_constraintStart_toEndOf="@id/tv_avaliacao_pontos"
        app:layout_constraintTop_toBottomOf="@id/tv_localizacao" />


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/iv_comentario_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="Imagem de perfil do usuário do último comentário"
        android:scaleType="centerCrop"
        android:src="@drawable/img_perfil_padrao"
        app:civ_border_width="0dp"
        app:civ_shadow="false"
        app:layout_constraintLeft_toLeftOf="@id/iv_estrela_1"
        app:layout_constraintStart_toStartOf="@id/iv_estrela_1"
        app:layout_constraintTop_toBottomOf="@id/iv_estrela_1" />

    <TextView
        android:id="@+id/tv_comentario_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/tv_comentario_1"
        app:layout_constraintStart_toEndOf="@id/tv_comentario_1"
        app:layout_constraintTop_toTopOf="@id/iv_comentario_1" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/iv_comentario_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="Imagem de perfil do usuário do penúltimo comentário"
        android:scaleType="centerCrop"
        android:src="@drawable/img_perfil_padrao"
        app:civ_border_width="0dp"
        app:civ_shadow="false"
        app:layout_constraintLeft_toLeftOf="@id/iv_comentario_1"
        app:layout_constraintStart_toStartOf="@id/iv_comentario_1"
        app:layout_constraintTop_toBottomOf="@id/iv_comentario_1" />

    <TextView
        android:id="@+id/tv_comentario_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/iv_comentario_2"
        app:layout_constraintStart_toEndOf="@id/iv_comentario_2"
        app:layout_constraintTop_toTopOf="@id/iv_comentario_2" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/iv_comentario_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="Imagem de perfil do usuário do penúltimo comentário"
        android:scaleType="centerCrop"
        android:src="@drawable/img_perfil_padrao"
        app:civ_border_width="0dp"
        app:civ_shadow="false"
        app:layout_constraintLeft_toLeftOf="@id/iv_comentario_2"
        app:layout_constraintStart_toStartOf="@id/iv_comentario_2"
        app:layout_constraintTop_toBottomOf="@id/iv_comentario_2" />

    <TextView
        android:id="@+id/tv_comentario_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/iv_comentario_3"
        app:layout_constraintStart_toEndOf="@id/iv_comentario_3"
        app:layout_constraintTop_toTopOf="@id/iv_comentario_3" />


</android.support.constraint.ConstraintLayout>